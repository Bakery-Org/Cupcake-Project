@model Recipe

<h2>Create a New Recipe</h2>

@using (Html.BeginForm("InsertRecipeToDatabase", "Recipe", "Post"))
{
    <input asp-for="ID" type="hidden" value="" />

    <label asp-for="Product_ID" class="control-label">Product ID</label>
    <input type="number" step="1" name="Product_ID" class="form-control" />

    <label asp-for="Ingredient_ID" class="control-label">Ingredient ID</label>
    <input type="number" step="1" name="Ingredient_ID" class="form-control" />

    <label asp-for="Quantity_Required" class="control-label">Quantity Required</label>
    <input type="number" step="0.01" name="Quantity_Required" class="form-control" />

    <input type="submit" value="Create Recipe" class="btn btn-primary" />
}