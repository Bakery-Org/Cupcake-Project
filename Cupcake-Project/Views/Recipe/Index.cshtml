@model IEnumerable<Recipe>

<h2>Recipes</h2>

   <div style="display: block">
     <a href="/Recipe/InsertRecipe/">Add Recipe</a>
 </div>

<table class="table">
    <tr>
        <th>ID</th>
        <th>Product ID</th>
        <th>Ingredient ID</th>
        <th>Quantity Required</th>
    </tr>

    @foreach (var recipe in @Model)
    {
        <tr>
            <td><a href=/Recipe/ViewRecipe/@recipe.ID>@recipe.ID</a></td>
            <td>@recipe.Product_ID</td>
            <td>@recipe.Ingredient_ID</td>
            <td>@recipe.Quantity_Required</td>
        </tr>
    }

</table>