@model Product

<h2 class="text-center">Create a New Product</h2>

@using (Html.BeginForm("InsertProductToDatabase", "Product", "Post"))
{
    <input asp-for="ID" type="hidden" value="" />

    <label asp-for="Name" class="control-label">Name</label>
    <input type="text" name="Name" class="form-control" value=""/>


    <label asp-for="Description" class="control-label">Description</label>
    <input type="text" name="Description" class="form-control" value="" />

    <label asp-for="Price" class="control-label">Price</label>
    <input type="number" name="Price" class="form-control" />


    <label asp-for="Quantity_In_Stock" class="control-label">Quantity In Stock</label>
    <input type="number" name="Quantity_In_Stock" class="form-control" />


    <button class="button" role="button" type="submit">Add Product</button>
    <a class="button" href="/Product/Index">Back</a>
}
