@model IEnumerable<Ingredient>

<h2>Ingredients</h2>

<div style="display: block">
    <a href="/Ingredient/InsertIngredient/">Create a New Ingredient</a>
</div>

<table class="table">
    <tr>
        <th>Name</th>
        <th>Quantity In Stock</th>
        <th>Unit of Measurement</th>
    </tr>

    @foreach (var ingredient in @Model)
    {
        <tr>
            <td><a href=/Ingredient/ViewIngredient/@ingredient.ID>@ingredient.Name</a></td>
            <td>@ingredient.Quantity_in_stock</td>
            <td>@ingredient.Unit_of_Measurement</td>
        </tr>
    }

</table>