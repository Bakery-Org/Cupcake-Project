@model Ingredient

<h2>Update @Model.Name</h2>

@using (Html.BeginForm("UpdateIngredientToDatabase", "Ingredient", "Post"))
{
    <input asp-for="ID" type="hidden" value="@Model.ID" />

    <label asp-for="Name" class="control-label">Name</label>
    <input type="text" name="Name" class="form-control" value="@Model.Name" />

    <label asp-for="Description" class="control-label">Description</label>
    <input type="number" step="0.01" name="Description" class="form-control" value="@Model.Description" />

    <label asp-for="Unit_of_Measurement" class="control-label">Unit of Measurement</label>
    <input type="number" step="0.01" name="Unit_of_Measurement" class="form-control" value="@Model.Unit_of_Measurement" />

    <label asp-for="Quantity_in_stock" class="control-label">Quantity in Stock</label>
    <input type="number" step="0.01" name="Quantity_in_stock" class="form-control" value="@Model.Quantity_in_stock" />

    <input type="submit" value="Update Ingredient" class="btn btn-primary" />
}